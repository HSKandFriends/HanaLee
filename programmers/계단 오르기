//https://www.acmicpc.net/problem/2579
//하던 중
#include <string>
#include <iostream>
#include <algorithm>
#include <queue>
#include <cmath>

using namespace std;

int stair_num[301] = { 0 };
int sum1[304] = { 0 };
int sum2[304] = { 0 };
int num = 1;

void stair(int add) {
	if (sum1[add - 1] == 0) { stair(add - 1); }
	//for (int j = 1; j < num; j++) {
		sum1[add] = sum2[add - 1] + stair_num[add]; //전 밟음
		sum2[add] = sum1[add - 1] + stair_num[add];//전 안 밝음
	//}
}

int main() {
	int i = 0;

	cin >> num;
	for (i = 0; i < num; i++) {
		cin>>stair_num[i];
	}

	sum1[0] = 0;
	sum2[0] = stair_num[0];

	stair((num-1));

	if (sum1[(num - 1)] > sum2[(num - 1)]) {
		cout << "1:"<<sum1[(num - 1)];
	}
	else { cout << "2:"<<sum2[(num - 1)]; }
	return 0;
}
